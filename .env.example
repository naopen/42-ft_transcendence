# Environment Variables Template
# Copy this to .env and fill in your values

# Database
DATABASE_VOLUME_PATH=./data

# Google OAuth 2.0
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Session & JWT
# Generate random strings for production: openssl rand -hex 32
SESSION_SECRET=your_random_session_secret_here
JWT_SECRET=your_random_jwt_secret_here

# Server
NODE_ENV=development
BACKEND_PORT=3000
FRONTEND_PORT=8443

# URLs (HTTPS for local development, adjust for production)
# Local development with self-signed certificates via nginx proxy
BACKEND_URL=https://localhost:8443
FRONTEND_URL=https://localhost:8443
VITE_API_URL=https://localhost:8443

# Production (Render.com) - uncomment and update when deploying
# BACKEND_URL=https://your-backend.onrender.com
# FRONTEND_URL=https://your-frontend.onrender.com
# VITE_API_URL=https://your-backend.onrender.com
